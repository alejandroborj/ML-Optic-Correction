call, file = "/afs/cern.ch/eng/sl/lintrack/Beta-Beat.src/madx/lib/segments.macros.madx";
option, echo;

!@require lhc_runIII_2022
!@require segments

option, -echo;

call, file = "/afs/cern.ch/eng/acc-models/lhc/2022/lhc.seq";

exec, define_nominal_beams();
call, file = "/user/slops/data/LHC_DATA/OP_DATA/Betabeat/2022-04-27/LHCB1/Results/b1_30cm_beforeKmod/sbs/modifiers.madx";
exec, set_default_crossing_scheme();

! Cycle the sequence in the start point to
! avoid negative length sequence.
seqedit, sequence=LHCB1;
flatten;
cycle, start=BPM.11L5.B1;
endedit;

use, period = LHCB1;

option, echo;

twiss;

exec, save_initial_and_final_values(
    LHCB1,
    BPM.11L5.B1,
    BPM.12R5.B1,
    "/user/slops/data/LHC_DATA/OP_DATA/Betabeat/2022-04-27/LHCB1/Results/b1_30cm_beforeKmod/sbs//measurementbetaamp_IP5.madx",
    biniLHCB1,
    bendLHCB1
);

exec, extract_segment_sequence(
    LHCB1,
    front_LHCB1, back_LHCB1,
    BPM.11L5.B1, BPM.12R5.B1
);
exec, beam_LHCB1(front_LHCB1);
exec, beam_LHCB1(back_LHCB1);


exec, twiss_segment(front_LHCB1, "/user/slops/data/LHC_DATA/OP_DATA/Betabeat/2022-04-27/LHCB1/Results/b1_30cm_beforeKmod/sbs//twissbetaamp_IP5.dat", biniLHCB1);
exec, twiss_segment(back_LHCB1, "/user/slops/data/LHC_DATA/OP_DATA/Betabeat/2022-04-27/LHCB1/Results/b1_30cm_beforeKmod/sbs//twissbetaamp_IP5_back.dat", bendLHCB1);

call, file="/user/slops/data/LHC_DATA/OP_DATA/Betabeat/2022-04-27/LHCB1/Results/b1_30cm_beforeKmod/sbs//corrections_IP5.madx";

exec, twiss_segment(front_LHCB1, "/user/slops/data/LHC_DATA/OP_DATA/Betabeat/2022-04-27/LHCB1/Results/b1_30cm_beforeKmod/sbs//twissbetaamp_IP5_cor.dat", biniLHCB1);
exec, twiss_segment(back_LHCB1, "/user/slops/data/LHC_DATA/OP_DATA/Betabeat/2022-04-27/LHCB1/Results/b1_30cm_beforeKmod/sbs//twissbetaamp_IP5_cor_back.dat", bendLHCB1);
